@page

@model DiagnosticsModel

<h1>Authentication cookie</h1>

<h3>Claims</h3>
<dl>
    @foreach (var claim in Model.Input.AuthenticateResult.Principal.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>

<h3>Properties</h3>
<dl>
    @foreach (var prop in Model.Input.AuthenticateResult.Properties.Items)
    {
        <dt>@prop.Key</dt>
        <dd>@prop.Value</dd>
    }
</dl>

@if (Model.Input.Clients.Any())
{
    <h3>Clients</h3>
    <ul>
        @foreach (var client in Model.Input.Clients)
        {
            <li>@client</li>
        }
    </ul>
}